<script type="text/javascript">

 
 jQuery( document ).ready(function( $ ) {
  
 if('<%=client.status%>'!= 'Active'){
 
      document.getElementById('btnInActive').innerHTML="Active";
	  
	  $('#edit12').addClass('disabled');
      }
	  
 <% for (var j = 1 ; j < client.officeno.length ;j++){ %>
	var newDiv=document.createElement('div');
	var element = document.createElement("input");
	element.setAttribute("type", "text");
    element.setAttribute("value", "<%= client.officeno[j] %>");
	element.setAttribute("class", "form-control");
	element.setAttribute("disabled","disabled");
	newDiv.appendChild(element);
	newDiv.classList.add("form-group");
	var item = document.getElementById('select-container');
	item.appendChild(newDiv);
	
     <%}%>
});



					
</script>

