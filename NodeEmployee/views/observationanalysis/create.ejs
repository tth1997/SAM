<script type="text/javascript">

	jQuery( document ).ready(function( $ ) {
	
	 sortSelect(document.getElementById("company"), 'text', 'asc');
	 sortSelect(document.getElementById("vessel"), 'text', 'asc');
	 sortSelect(document.getElementById("jobcategory"), 'text', 'asc');
	
	$country = $('#country');
    $city = $('#city');
	
	$country.change(function() {
    
    $city.html(''); // Clear existing options in second dropdown
	
	 
     var country_name = document.getElementById("country").value;
	 if(country_name != ''){
	 
        $.ajax({
          method: "GET",
          url: "/observationanalysis/returncity",
          data: { country_name: country_name },
		  dataType: "json",
        }).done(function( data ) {
          var result = data;
		  
            $.each(result, function (data) {
            var appenddata = "<option value = '" + result[data] + " '>" + result[data] + " </option>";
            $('#city').html($('#city').html() + appenddata);
             });
            sortSelect(document.getElementById("city"), 'text', 'asc'); 
      });
	  }
	  else
	 {
	   $('#city').append($('<option>', {
			value: '',
			text: 'Select City'
		}));
		
	 }
	
	
    }).change();
	
	
	
	
	$jobcategory = $('#jobcategory');
    $jobtype = $('#jobtype');
	
	$jobcategory.change(function() {
    
    $jobtype.html(''); // Clear existing options in second dropdown
    var select = document.getElementById("jobtype");
	var value = document.getElementById("jobcategory").value;
	
	<% for(var i=0; i < jobtype.length; i++){ %>
	     if(value == '<%= jobtype[i].jobcategory_id %>'){
            var el = document.createElement("option");
            el.textContent = '<%= jobtype[i].jobtype %>';
            el.value = '<%= jobtype[i]._id %>';
            select.appendChild(el);
	     }
    <%}%>
    sortSelect(document.getElementById("jobtype"), 'text', 'asc');	
    }).change();
	
	
	
	 $("#nonationality").keypress(function (e) {
     //if the letter is not digit then display error and don't type anything
     if (e.which != 8 && e.which != 0 && (e.which < 48 || e.which > 57)) {
        //display error message
        $("#errmsg").html("Digits Only").show().fadeOut("slow");
               return false;
    }
	
	
     });
	 
	$('#nonationality').change(function () {
    document.getElementById('select-container').innerHTML = "";
	
	
	for (var j = 0 ; j < $('#nonationality').val() ;j++){
	
	addSelect('select-container');
	
	}
    });
	 
	function addSelect(divname) {
	
	
    var newDiv=document.createElement('div');
    var html = '<select id ="nationality" name="nationality" class="form-control">', i ;
    <%for(i = 0; i < nationality.objNat.length; i++) {%>
        html += "<option value='<%= nationality.objNat[i] %>'><%= nationality.objNat[i] %></li>";
    <%}%>
    html += '</select>';
	
    newDiv.innerHTML= html;
	
	newDiv.classList.add("form-group");
    document.getElementById(divname).appendChild(newDiv);
    }
	
	
	
    $('#createobsanalysis').bootstrapValidator({
        container: '#messages',
        feedbackIcons: {
            valid: 'glyphicon glyphicon-ok',
            invalid: 'glyphicon glyphicon-remove',
            validating: 'glyphicon glyphicon-refresh'
        },
        fields: {
           
			reviewdate: {
                validators: {
                    notEmpty: {
                        message: ''
                    }
                }
            }
			
        }
    });
	
	
		
	
});

var sortSelect = function (select, attr, order) {
    if(attr === 'text'){
        if(order === 'asc'){
            $(select).html($(select).children('option').sort(function (x, y) {
                return $(x).text().toUpperCase() < $(y).text().toUpperCase() ? -1 : 1;
            }));
            $(select).get(0).selectedIndex = 0;
            
        }// end asc
        if(order === 'desc'){
            $(select).html($(select).children('option').sort(function (y, x) {
                return $(x).text().toUpperCase() < $(y).text().toUpperCase() ? -1 : 1;
            }));
            $(select).get(0).selectedIndex = 0;
            e.preventDefault();
        }// end desc
    }

};
   

</script> 
