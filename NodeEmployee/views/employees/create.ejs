                        }
                    }
                },
                passportno: {
                    validators: {
                        notEmpty: {
                            message: ''
                        }
                    }
                },
                country: {
                    validators: {
                        notEmpty: {
                            message: ''
                        }
                    }
                },
                city: {
                    validators: {
                        notEmpty: {
                            message: ''
                        }
                    }
                },
                martialstatus: {
                    validators: {
                        notEmpty: {
                            message: ''
                        }
                    }
                },
                permitstatus: {
                    validators: {
                        notEmpty: {
                            message: ''
                        }
                    }
                }
            }
        });
    });

</script>