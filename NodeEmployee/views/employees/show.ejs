	</div>

	<div class="main-panel">
		<nav class="navbar navbar-default navbar-fixed">
			<div class="container-fluid">
				<div  align="right">
					<a href="">Account</a>
					&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
					<a href="#">Log out</a>
				</div>
			</div>
		</nav>

		<div class="container-fluid">
			<div class="row">
				<div class="col-md-8">
					<div class="card">
						<div class="header">
							<h5><a href="/employees">Employee List</a></h5>
						</div>
						<div class="content">
							<div class="row">
								<div class="col-md-4">
									<div class="form-group">
										<label>First Name</label>
										<input type="text" class="form-control" disabled value="<%= employee.firstname %>"></div>
									</div>
									<div class="col-md-4">
										<div class="form-group">
											<label>Last Name</label>
											<input type="text" class="form-control" disabled value="<%= employee.lastname %>">
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-md-4">
										<div class="form-group">
											<label>Address</label>
											<input type="text" class="form-control" disabled value="<%= employee.address %>"></div>
										</div>
									</div>
									<div class="row">
										<div class="col-md-4">
											<div class="form-group">
												<label>Office Address</label>
												<input type="text" class="form-control" disabled value="<%= employee.office %>"></div>
											</div>
										</div>
										<div class="row">
											<div class="col-md-4">
												<div class="form-group">
													<label>DoB *</label>
													<input type="text" class="form-control" disabled value="<%= employee.dateofbirth %>">
												</div>
											</div>
											<div class="col-md-4">
												<div class="form-group">
													<label>Passport No. *</label>
													<input type="text" class="form-control" disabled value="<%= employee.passportno %>">
												</div>
											</div>
										</div>
										<div class="row">
											<div class="col-md-4">
												<div class="form-group">
													<label>Country</label>
													<input type="text" class="form-control" disabled value="<%= employee.country %>">
												</div>
											</div>
											<div class="col-md-4">
												<div class="form-group">
													<label>City</label>
													<input type="text" class="form-control" disabled value="<%= employee.city %>">
												</div>
											</div>
										</div>
										<div class="row">
											<div class="col-md-4">
												<div class="form-group">
													<label>Date of Joining</label>
													<input type="text" class="form-control" disabled value="<%= employee.dateofjoin %>">
												</div>
											</div>
											<div class="col-md-4">
												<div class="form-group">
													<label>Nationality</label>
													<input type="text" class="form-control" disabled value="<%= employee.nationality %>">
												</div>
											</div>
										</div>
										<div class="row">
											<div class="col-md-4">
												<div class="form-group">
													<label>Martial Status</label>
													<input type="radio" name="maritalstatus" id="ms1" disabled />Married &nbsp;&nbsp;
													<input type="radio" name="maritalstatus" id="ms2"  disabled />Unmarried
												</div>
											</div>
											<div class="col-md-4">
												<div class="form-group">
													<label>Permit Status</label>
													<input type="text" class="form-control" disabled value="<%= employee.permitstatus %>">
												</div>
											</div>
										</div>
										<div class="row">
											<div class="col-md-4">
												<div class="form-group">
													<label>Comments</label>
													<textarea rows="5" class="form-control" disabled id="comment" name="comment"></textarea>
												</div>
											</div>
										</div>
										<div class="row">
											<div class="col-md-4">
												<div class="form-group">
													<label>Father Name</label>
													<input type="text" class="form-control" disabled value="<%= employee.fathername %>"> 
												</div>
											</div>
											<div class="col-md-4">
												<div class="form-group">
													<label>Mother Name</label>
													<input type="text" class="form-control" disabled value="<%= employee.mothername %>"> 
												</div>
											</div>
										</div>
							   <h3><a href="/employees/edit/<%= employee.employee_id%>" class="btn btn-info btn-fill pull-right">EDIT</a></h3>
                                <form action="/employees/delete/<%= employee.employee_id%>" method="post">
                                <button type="submit" class="btn btn-primary btn-fill pull-right" onclick="return confirm('Are you sure want to delete?')">DELETE</button>
                                <div class="clearfix">
                                </div>
                                </form>
									</div>
								</div>
							</div>
						</div>

					</body>
					</html>

					<script type="text/javascript">

    $(document).ready(function() {

    	$('#comment').val('<%= employee.comment %>');
    	alert('<%= employee.comment %>');

    });

    </script>