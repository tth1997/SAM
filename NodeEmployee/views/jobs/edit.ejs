<script type="text/javascript">
$(document).ready(function() { 
   $('#editjob').bootstrapValidator({
        container: '#messages',
        feedbackIcons: {
            valid: 'glyphicon glyphicon-ok',
            invalid: 'glyphicon glyphicon-remove',
            validating: 'glyphicon glyphicon-refresh'
        },
        fields: {
           
            email: {
                validators: {
                    notEmpty: {
                        message: ''
                    }
                }
            }
        }
    
	
        });  
        
     });	
					
 </script>       