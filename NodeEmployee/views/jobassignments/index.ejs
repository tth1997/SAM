                        <a href="http://www.safe-lanes.com" class="simple-text">
                            Safe Lanes
                        </a>
                    </div>
                    <ul class="nav">
                        <li>
                            <a href="/dashboard">
                               <p>Dashboard</p>
                            </a>
                        </li>
                        
					    <li>
                           <a href="/user">
                              <p>User Profile</p>
                           </a>
                        </li>
						
						<li>
                            <a href="/employees">
                               <p>Employee Master</p>
                            </a>
                        </li>
						
                        <li>
                            <a href="/vdranalysis">
                                <p>VDR Analysis</p>
                            </a>
                        </li>
                        <li  class="active">
                            <a href="/jobassignments">
                               <p>Job Assignment</p>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
        
 <div class="main-panel">
    <nav class="navbar navbar-default navbar-fixed">
        <div class="container-fluid">
            <div  align="right">
                <a href="">Account</a>
                   &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                <a href="#">Log out</a>
            </div>
        </div>
	</nav>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="header">
                                <h5><a href="/jobassignments/create">Create Job Assignment</a></h5>
                                 <h5>Job Assignment List</h5>
								 
								 <div align="right">
							    <h5><a href="/jobs/create">Add/Edit Jobs</a></h5>
								</div>
								
                            </div>
                            <div class="content table-responsive table-full-width">
							 <% if(jobassignments.length>0) { %>
                                <table class="table table-hover table-striped">
                                    <thead>
									<tr>
                                    <th>Auditor</th>
                                    <th>Job Type</th>
                                    <th>Vessel</th>
                                    <th>Company</th>
                                    <th>Assigned Date</th>
                                    </tr>
                                </thead>
                               <tbody>
			
			                    <% for(var i=0; i<jobassignments.length;i++) { %>
                                   <tr>
                                     <td><a href="/jobassignments/show/<%= jobassignments[i]._id%>"><%= jobassignments[i].employeename%></a></td>
                                    <td><%= jobassignments[i].jobtype%></td>
								    <td><%= jobassignments[i].vessel%></td>
								    <td><%= jobassignments[i].company%></td>
								    <td><%= jobassignments[i].assigneddate%></td>
							       </tr>
                                <% } %>
							   </tbody>
                          </table>
                             <% } else { %>
                         <div>No assignments found.</div>
                               <% } %>
                         </div>
			
			
			
                         </div>
                        </div>
                    </div>


                   


    </div>
</div>
